{
  "name": "audiovisualizer",
  "private": true,
  "version": "0.9.1",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build-server",
    "build-server": "esbuild server/index.ts --bundle --platform=node --outdir=dist/",
    "setup": "node setup.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "start:ws": "npx tsx ../audiovisualizer/server/index.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run start:ws\""
  },
  "dependencies": {
    "@breezystack/lamejs": "^1.2.7",
    "deskthing-client": "latest",
    "deskthing-server": "latest",
    "express": "^4.21.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.19.2",
    "wasapi-audio-capture": "^0.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-legacy": "^5.4.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "esbuild": "^0.19.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  }
}
